        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border BorderBrush="#C8C6C6" BorderThickness="1" Background="#EEEEEE">
            <Border BorderBrush="#9D9D9D" BorderThickness="1" Grid.Row="0" Margin="7 7 7 7">
                <DockPanel LastChildFill="False">
                    <Menu DockPanel.Dock="Right" Height="40" Width="300" Name="menu1"  BorderThickness="2"  FontWeight="Bold" Padding=" 0 0 15 0">
                        <Menu.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel HorizontalAlignment="Right"/>
                            </ItemsPanelTemplate>
                        </Menu.ItemsPanel>
